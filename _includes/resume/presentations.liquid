<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign presentations = data[1] | sort: 'date' | reverse %}
  {% for content in presentations %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 col-sm-2 col-md-2 d-flex flex-column align-items-center justify-content-center">
          {% if content.date and content.date != '' %}
            {% assign date = content.date | split: '-' | slice: 0, 2 | join: '.' %}
          {% else %}
            {% assign date = null %}
          {% endif %}
          {% if date %}
            <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle mb-1" style="min-width: 75px; text-align: center;">
              {{ date }}
            </span>
          {% endif %}
          {% if content.location %}
            <p class="location mb-0 text-center" style="font-size: 0.85rem;">
              <i class="fa-solid fa-location-dot iconlocation"></i>
              {{ content.location }}
            </p>
          {% endif %}
        </div>
        <div class="col-xs-10 col-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            <a href="{{ content.url }}">{{ content.studyType }}</a>
          </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ content.institution }}</h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">{{ content.area }}</h6>
          <ul class="items">
            {% for item in content.courses %}
              <li>
                <span class="item">{{ item }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
